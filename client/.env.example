# IC-Lib Frontend Environment Variables
# Copy this file to .env.local and customize for your deployment

# ============================================================================
# BASE_URL - Deployment Base Path
# ============================================================================
# Set this to the path where your app will be deployed
# 
# Examples:
#   Subdomain deployment (root):     BASE_URL=/
#   Directory deployment:             BASE_URL=/test
#   Custom path:                      BASE_URL=/myapp
#
# IMPORTANT: 
#   - Must start with / 
#   - No trailing slash
#   - Leave empty or set to ./ for auto-detection at runtime
#
# Default: ./ (relative paths, auto-detect at runtime)
# BASE_URL=/test

# ============================================================================
# VITE_API_URL - API Endpoint Override (Optional)
# ============================================================================
# Override the API endpoint URL if your backend is at a different location
# 
# Examples:
#   Same origin:                      VITE_API_URL=/api
#   Custom path:                      VITE_API_URL=/custom-api
#   Different domain:                 VITE_API_URL=https://api.example.com
#
# Default: Auto-detected as {BASE_URL}/api
# VITE_API_URL=/api

# ============================================================================
# Build Commands
# ============================================================================
# 
# Build for root deployment (subdomain):
#   npm run build
#
# Build for specific path (directory style):
#   BASE_URL=/test npm run build
#   BASE_URL=/iclib npm run build
#   BASE_URL=/production npm run build
#
# Build with custom API endpoint:
#   VITE_API_URL=https://api.example.com npm run build
#
# Build with both:
#   BASE_URL=/test VITE_API_URL=/custom-api npm run build
#
# ============================================================================

# ============================================================================
# Docker Build Examples
# ============================================================================
#
# Build Docker image with BASE_URL:
#   docker build --build-arg BASE_URL=/test -t iclib:test .
#
# Run with environment variable:
#   docker run -e BASE_URL=/test -p 3041:80 iclib:test
#
# Docker Compose with build args:
#   services:
#     iclib:
#       build:
#         context: .
#         args:
#           BASE_URL: /test
#
# ============================================================================
