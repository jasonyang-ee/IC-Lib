# Allegro Component Library - Development Environment Configuration
# Copy this file to .env and update with your actual values for local development.

# Database Configuration
DB_HOST=ip_address_or_hostname
DB_PORT=5432
DB_USER=username
DB_PASSWORD=password
DB_NAME=database_name

# Server Configuration
PORT=3500
NODE_ENV=development
VITE_API_URL=http://localhost:3500/api

# Feature Toggles
CONFIG_ECO=true

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string-in-production-minimum-32-characters

# Library Base Path (for OrCAD CIS file linking)
# Set to the absolute path where the library folder is accessible from OrCAD workstations
# Example: \\\\server\\share\\library or C:\\CADLibrary
LIBRARY_BASE_PATH=

# OrCAD OLB Conversion (optional - for TCL-based OLB generation)
# Path to tclsh.exe (defaults to example/olb/tcltk/tcltk/bin/tclsh.exe)
ORCAD_TCLSH_PATH=
# Directory containing orDb_Dll_Tcl64.dll and orDb_Dll64.dll (defaults to example/olb)
ORCAD_DLL_DIR=

# API Keys (Optional - for vendor integrations)
DIGIKEY_CLIENT_ID=your_digikey_client_id
DIGIKEY_CLIENT_SECRET=your_digikey_client_secret
MOUSER_API_KEY=your_mouser_api_key
ULTRA_LIBRARIAN_TOKEN=your_ultra_librarian_token
SNAPEDA_API_KEY=your_snapeda_api_key
